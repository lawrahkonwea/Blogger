<div class="user-detail">
    <div class="detail-description">
    <div><img src="<%= @user.photo %>" alt="User" /></div>
    <div class="user-desc">
        <h1 class="username_show"> <%=@user.name %></h1>
        <h3 class="userpost_count">Number of posts: <%= @user.post_counter %></h3>
    </div>
    </div>
    <div class="bio">
        <h2>Bio</h2>
        <p class="user_bio"><%= @user.bio %></p>
    </div>
    <div class="recent-posts">
    <% @user.three_recent_posts.each do |post| %>
        <div class="single-post">
        
            <a href="/users/<%= @user.id %>/posts/<%= post.id %>" class="">
            <h2><%= post.title %></a></h2>
            <p><%= post.text %></p>
             <div class="comment-like">
                    <span class="comments">Comments: <%= post.comments_counter%>, </span>
                    <span class="likes">Likes:<%= post.likes_counter%></span>
                </div>
        
        </div>
         <%end%> 
         <a href="<%=@user.id%>/posts/" class="button">See all posts</a>
    </div>
    

</div>
